# Copy this file to `.env` and fill in real values before deploying.

# Server
PORT=5000
NODE_ENV=production
CLIENT_URL=https://your-frontend-domain.example

# MongoDB - when using docker-compose, you can use the service name and credentials below
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=change_me
MONGO_URL=mongodb://admin:change_me@mongo:27017/admin

# JWT / Auth
JWT_SECRET=your_jwt_secret_here

# Optional: set real admin defaults used by the User schema (not recommended for prod)
MY_USERNAME=admin
MY_PASSWORD=supersecret
